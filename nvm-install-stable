#!/usr/bin/env bash
# install nvm
if [[ -d ~/.nvm ]]; then
  echo "nvm was already installed."
else
  echo "install nvm"
  git clone https://github.com/creationix/nvm.git ~/.nvm
  cd ~/.nvm && git checkout `git describe --abbrev=0 --tags`
fi

# save PREFIX
prefix_save=$PREFIX
unset PREFIX

source ~/.nvm/nvm.sh
nvm install stable
echo `nvm version` >~/.nvmrc

# restore PREFIX
PREFIX=$prefix_save
